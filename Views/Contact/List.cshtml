@model IEnumerable<MyContact.Models.t_Contact>
@using MyContact.Repositories
@{
    ViewData["Title"] = "Contact List";
    Layout = "../Shared/_ContactLayout.cshtml";
}
<div class="container mt-4">
    <h3>Contacts</h3>
    <div id="responseMessage" class="mt-3">
        <div class="alert @(TempData["Message"] != null ? "alert-primary" : "")">
        @TempData["Message"]
        </div>
    </div>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Edit</th>
                <th width="60"></th>
                <th>Name</th>
                <th>Email</th>
                <th>Group</th>
                <th>Address</th>
                <th>Mobile</th>
                <th>Status</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var contact in Model)
        {
                <tr style="vertical-align: middle;">
                    <td><a href="@Url.Action("Create","Contact" , new {id = contact.c_contactId})" class="btn btn-sm btn-primary">Edit</a></td>
                    <td><img id="image" src="@(contact.c_Image !=""?$"../../contact_images/{contact.c_Image}": "../../contact_images/user.png")"
                    width="50" style="border-radius: 50%; width: 50px;height: 50px;"
                    
                    /></td>
                    <td>@contact.c_contactName</td>
                    <td>@contact.c_Email</td>
                    <td>@contact.c_Group</td>                    
                    <td>@contact.c_Address</td>
                    <td>@contact.c_Mobile</td>
                    <td>@contact.c_Status</td>
                    <td><a href="@Url.Action("Delete","Contact" , new {id = contact.c_contactId})" class="btn btn-sm btn-primary">Delete</a></td>
                </tr>
        }
        </tbody>

    </table>
</div>


